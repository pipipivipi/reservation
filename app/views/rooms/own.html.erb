<%= render "shared/header" %>

<div class="container">
<h4>登録した施設一覧</h4>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <td></td>
        <td>施設名</td>
        <td>所在地</td>
        <td>施設紹介</td>
        <td>料金</td>
        <td>登録日</td>
      </tr>
    </thead>

    <tbody>
      <% @rooms.each do |room| %>
      <tr>
        <th><%= image_tag room.image.variant(resize: "100x100>").processed %></th>
        <th><%= link_to room.name, room, class: "text-decoration-none" %></th>
        <th><%= room.location %></th>
        <th><%= room.introduction %></th>
        <th><%= room.price %></th>
        <th><%= room.created_at.to_s(:datetime_jp) %></th>
        <th><%= link_to "施設編集", [:edit, room], class: "text-decoration-none" %></th>
        <th><%= link_to "施設削除", room, class: "text-decoration-none", method: :delete, data: {confirm: "本当に削除しますか？" } %></th>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>