<%= render "shared/header" %>

<div class="container">
<h4>施設一覧</h4>
<%= search_form_for @q do |f| %>
<%= f.search_field :location_cont, class: "form-control", placeholder: "エリア検索" %>
<%= f.search_field :name_or_introduction_cont, class: "form-control", placeholder: "検索ワード" %>
  <%= f.submit "検索", class: "btn btn-primary" %>
<% end %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <td></td>
        <td>施設名</td>
        <td>所在地</td>
        <td>施設紹介</td>
        <td>料金</td>
      </tr>
    </thead>

    <tbody>
      <% @rooms.each do |room| %>
      <tr>
        <th><%= image_tag room.image.variant(resize: "100x100>").processed %></th>
        <th><%= room.name %></th>
        <th><%= room.location %></th>
        <th><%= room.introduction %></th>
        <th><%= room.price %></th>
        <th><%= link_to "詳細", room, class: "text-decoration-none" %></th>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>