<%= render "shared/header" %>
<h4>施設情報編集</h4>

<%= form_with model: @room do |f| %>
<table>
  <tr>
    <th><%= f.label :name, "施設名" %></th>
    <td><%= f.text_field :name %></td>
  </tr>

  <tr>
    <th><%= f.label :introduction, "施設紹介" %></th>
    <td><%= f.text_area :introduction %></td>
  </tr>

  <tr>
    <th><%= f.label :price, "料金" %></th>
    <td><%= f.text_field :price %></td>
  </tr>

  <tr>
    <th><%= f.label :location, "所在地" %></th>
    <td><%= f.text_field :location %></td>
  </tr>

  <tr>
    <th><%= f.label :image, "画像" %></th>
    <td><%=f.file_field :image %></td>
  </tr>
</table>
<br>
<br>
<div>
  <ul>
    <%= f.submit "保存", class: "btn btn-outline-success" %>
  </ul>
</div>
<div>
  <ul>
    <%= link_to "キャンセル", "/rooms/own", class: "btn btn-outline-secondary" %>
  </ul>
</div>
<% end %>